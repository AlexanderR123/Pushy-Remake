<Window x:Class="Pushy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pushy"
        mc:Ignorable="d"
        Title="MainWindow" Height="590" Width="800" MinHeight="590" MinWidth="800" KeyDown="Window_KeyDown" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="9*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="9*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Image x:Name="Spielfeld" Grid.Column="1" Grid.Row="1" MinWidth="640" MinHeight="384"></Image>

            <TextBox x:Name="LVL" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="654,0,0,0" TextChanged="LVL_TextChanged" >0</TextBox>


        </Grid>

        <Button Grid.Row="1" Click="Button_Click">Button 7</Button>


    </Grid>
</Window>
